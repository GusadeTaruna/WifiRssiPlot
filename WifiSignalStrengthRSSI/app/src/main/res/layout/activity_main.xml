<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="8dp"
    tools:layout_editor_absoluteX="8dp"
    tools:ignore="MissingConstraints"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:text="@string/wifi_rssi"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/signalDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="@string/strength_unknown"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:layout_below="@+id/ssidDisplay"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/ssidDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ssid_unknown"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <Button
        android:id="@+id/goToNext"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="@string/database"
        android:layout_below="@+id/signalDisplay"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp" />

        <com.jjoe64.graphview.GraphView
            android:layout_width="match_parent"
            android:layout_height="360dip"
            android:id="@+id/graph"
            android:layout_marginTop="200dp"/>


    </RelativeLayout>
